%h1 Editing ticket

= form_for(@ticket) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :email
    %br/
    = f.text_field :email

  .field
    = f.label :issue
    %br/
    = f.select :issue, [['General','general'],['Account','account'],['Billing','billing'],['Technical','technical']]

  .field
    = f.label :status
    %br/
    = f.select :status, [['Waiting for Staff Response','New unassigned ticket'], ['Waiting for Customer','Open Ticket'], ['On Hold','On Hold Ticket'], ['Cancelled','Closed Ticket'], ['Completed','Closed Ticket']]

  .field
    = f.label :subject
    %br/
    = f.text_field :subject

  .field
    = f.label :description
    %br/
    = f.text_area :description

  .actions
    = f.submit

= link_to 'Show', @ticket
|
\#{link_to 'Back', tickets_path}