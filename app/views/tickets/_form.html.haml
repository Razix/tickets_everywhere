= form_for(@ticket) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :email
    %br/
    = f.text_field :email

  .field
    = f.label :issue
    %br/
    = f.select :issue, [['General','general'],['Account','account'],['Billing','billing'],['Technical','technical']]

  .field
    = f.label :subject
    %br/
    = f.text_field :subject

  .field
    = f.label :description
    %br/
    = f.text_area :description

  = f.hidden_field :status, :value => "Waiting for Staff Response"
  .actions
    = f.submit
